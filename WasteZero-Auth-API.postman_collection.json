{
  "info": {
    "name": "WasteZero Auth API Milestone 1",
    "description": "Collection for testing WasteZero backend authentication endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:5000/",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": [""]
        },
        "description": "Check if the server is running"
      },
      "response": []
    },
    {
      "name": "Register User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"waste man\",\n  \"email\": \"waste@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"volunteer\",\n  \"skills\": \"recycling,cleaning\",\n  \"location\": \"kolkata\",\n  \"bio\": \"helping with waste management\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/register",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "register"]
        },
        "description": "Register a new user. Returns token and user info."
      },
      "response": []
    },
    {
      "name": "Login User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"waste@example.com\",\n  \"password\": \"password123\"\n}"
        },
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "login"]
        },
        "description": "Login with email and password. Returns token and user info."
      },
      "response": []
    },
    {
      "name": "Get Current User (Protected)",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}",
            "type": "text",
            "description": "Replace {{token}} with the token from register or login response"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/me",
          "protocol": "http",
          "host": ["localhost"],
          "port": "5000",
          "path": ["api", "auth", "me"]
        },
        "description": "Get current authenticated user info. Requires valid JWT token in Authorization header."
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "token",
      "value": "",
      "type": "string",
      "description": "JWT token from login or register. Copy the token from response and paste here or in the Authorization header."
    }
  ]
}
